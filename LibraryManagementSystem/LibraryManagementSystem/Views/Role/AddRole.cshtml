@model LibraryManagementSystem.ViewModel.RoleModelView

@{
    ViewData["Title"] = "Add Role";
}

<h1 class="text-center mb-4">Add New Role</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="AddRole" method="post" class="border p-4 shadow-sm rounded">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                <input asp-for="RoleName" class="form-control rounded" placeholder="Enter role name" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create Role" class="btn btn-link" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .btn-primary {
        transition: background-color 0.3s;
    }

    .btn-primary:hover {
        background-color: #0056b3; /* Darker shade of blue or any color you prefer */
        color: #fff; /* Ensure text color contrasts with the background */
    }
</style>
