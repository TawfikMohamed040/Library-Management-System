@model IEnumerable<LibraryManagementSystem.Models.Book> 



<h2 class="text-center mb-4">Books List</h2> 

<table class="table table-striped table-hover table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Genre</th>
            <th>Number of Copies</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model )
        {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.Genre</td>
                    <td>@book.NoOfCopies</td>
                </tr>
        }
    </tbody>
</table>

<style>
    table {
        margin: auto;
        width: 80%;
        background-color: #f9f9f9;
    }
    th, td {
        text-align: center;
        vertical-align: middle;
    }
    h2 {
        color: #333;
    }
</style>
 