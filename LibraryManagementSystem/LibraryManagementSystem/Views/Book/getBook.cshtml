@model IEnumerable<LibraryManagementSystem.Models.Book>

<h2 class="text-center mb-4">Books List</h2>

<form method="get" asp-action="getBook" class="mb-4">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="title" class="form-control" id="title" placeholder="Enter title" value="@ViewContext.HttpContext.Request.Query["title"]">
    </div>
    <div class="form-group">
        <label for="author">Author</label>
        <input type="text" name="author" class="form-control" id="author" placeholder="Enter author" value="@ViewContext.HttpContext.Request.Query["author"]">
    </div>
    <div class="form-group">
        <label for="genre">Genre</label>
        <input type="text" name="genre" class="form-control" id="genre" placeholder="Enter genre" value="@ViewContext.HttpContext.Request.Query["genre"]">
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>


<table class="table table-striped table-hover table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Genre</th>
            <th>Number of Copies</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.Genre</td>
                    <td>@book.NoOfCopies</td>
                </tr>
        }
    </tbody>
</table>
