
@{
    ViewData["Title"] = "GetAllCheckouts";
}

@model List<Checkout>

<h2 class="text-center mb-4">Checkouts List</h2>

<table class="table table-striped table-hover table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>CheckOutId</th>
            <th>MemberName</th>
            <th>BookId</th>
            <th>BookName</th>
            <th>CheckOutDate</th>
            <th>DueDate</th>
            <th>Returned</th>
            <th>Return Book</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var check in Model)
        {
            <tr>
                <td>@check.CheckOutId</td>
                <td>@check.User.UserName</td>
                <td>@check.BookId</td>
                <td>@check.Book.Title</td>
                <td>@check.CheckOutDate</td>
                <td>@check.DueDate</td>
                <td>@check.Returned</td>
                <td> 
                    <form asp-action="recordReturn" asp-controller="Return" method="get">
                      <input type="hidden" name="checkoutId" value="@check.CheckOutId" />
                        @if(check.Returned == true) {         
                            <button type="submit" class="btn btn-primary" disabled >Return Book</button>
                        }
                        else 
                        {
                            <button type="submit" class="btn btn-primary">Return Book</button>
                        }
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    table {
        margin: auto;
        width: 80%;
        background-color: #f9f9f9;
    }
    th, td {
        text-align: center;
        vertical-align: middle;
    }
    h2 {
        color: #333;
    }
</style>

