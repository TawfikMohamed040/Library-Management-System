@{
    ViewData["Title"] = "Get All Checkouts";
}

@model List<Checkout>

<div class="container mt-5">
    <h2 class="text-center mb-4">Checkouts List</h2>

    <table class=" table-striped table-hover  shadow">
        <thead class="thead-dark">
            <tr>
                <th>CheckOutId</th>
                <th>Member Name</th>
                <th>Book Id</th>
                <th>Book Name</th>
                <th>CheckOut Date</th>
                <th>Due Date</th>
                <th>Returned</th>
                <th>Return Book</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var check in Model)
            {
                    <tr>
                        <td>@check.CheckOutId</td>
                        <td>@check.User.UserName</td>
                        <td>@check.BookId</td>
                        <td>@check.Book.Title</td>
                        <td>@check.CheckOutDate.ToString("MM/dd/yyyy")</td>
                        <td>@check.DueDate.ToString("MM/dd/yyyy")</td>
                        <td>
                        @{
                            var returnedClass = check.Returned ? "text-success" : "text-danger";
                            var returnedText = check.Returned ? "Yes" : "No";
                        }
                            <span class="@returnedClass font-weight-bold">@returnedText</span>
                        </td>
                        <td> 
                            <form asp-action="recordReturn" asp-controller="Return" method="get">
                                <input type="hidden" name="checkoutId" value="@check.CheckOutId" />
                                <button type="submit" class="btn btn-primary rounded-pill" @(check.Returned ? "disabled" : "")>
                                    Return Book
                                </button>
                            </form>
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</div>

<style>
   
    
    table{
        padding:10px;
        margin: auto;
        width: 90%; /* Adjusted width for better alignment */
        background-color: #ffffff; /* White background for the table */
        border-radius: 30px; /* Rounded corners for the table */
    }

    th, td {
        text-align: center;
        vertical-align: middle;
    }

    th {
        background-color: #343a40; /* Dark background for the header */
        color: white; /* White text for header */
    }

    h2 {
        color: #333;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f2f2f2; /* Light gray for odd rows */
    }

    .table-hover tbody tr:hover {
        background-color: #e9ecef; /* Light hover effect */
    }

    .text-success {
        color: green; /* Green for true values */
    }

    .text-danger {
        color: red; /* Red for false values */
    }

    .btn-primary {
        background-color: #007bff; /* Bootstrap primary button color */
        border: none; /* Remove default border */
    }

    .btn-primary:hover {
        background-color: #0056b3; /* Darker blue on hover */
        cursor: pointer; /* Pointer cursor on hover */
    }

    .rounded-pill {
        border-radius: 50px; /* Round button */
        padding: 10px 20px; /* Button padding */
    }

    .shadow {
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
    }
</style>
